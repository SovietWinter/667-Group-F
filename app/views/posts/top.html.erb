<p id="notice"><%= notice %></p>
<h1>Top Posts</h1>

<table>
  <h4>most recommend</h4>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
      <th>Created at</th>
      <th>Num recommends</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @top_recommend_posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.created_at %></td>
        <td><%= post.num_recommends %></td>
        <td><%= post.topic %></td>
      </tr>
    <% end %>

    
  </tbody>
</table>

<br>