<p id="notice"><%= notice %></p>

<h1>Listing Post Imgs</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_imgs.each do |post_img| %>
      <tr>
        <td><%= post_img.post_id %></td>
        <td><%= post_img.image %></td>
        <td><%= link_to 'Show', post_img %></td>
        <td><%= link_to 'Edit', edit_post_img_path(post_img) %></td>
        <td><%= link_to 'Destroy', post_img, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

